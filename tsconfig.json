{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src","src/**/*.json"],
  "references": [{
    "path": "../common"
  }],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "composite": true
  },
}
